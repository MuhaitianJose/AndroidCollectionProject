<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appmk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/activity_splash" />

    <com.muhaitian.mvpdemo.widget.SimpleButton
        android:id="@+id/SB_skip"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        appmk:SB_auto_check="false"
        appmk:SB_bg_color="#aaff4081"
        appmk:SB_shape="arc"
        appmk:SB_text="跳过 3"
        appmk:SB_text_color="@android:color/white" />

</FrameLayout>